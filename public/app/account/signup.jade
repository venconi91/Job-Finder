.container
  div(class="col-lg-6")
    div(class="well bs-component")
      form(class="form-horizontal")
        fieldset
          legend Register
          div(class="form-group")
            label(for="username" class="col-lg-2 control-label") Username
            div(class="col-lg-10")
              input(type="text" class="form-control" id="usernameInput" placeholder="Username" ng-model="user.username")
          div(class="form-group")
            label(for="emailInput" class="col-lg-2 control-label") Email
            div(class="col-lg-10")
              input(type="email" class="form-control" id="emailInput" placeholder="Email" ng-model="user.email")
          div(class="form-group")
            label(for="inputPassword" class="col-lg-2 control-label") Password
            div(class="col-lg-10")
              input(type="password" class="form-control" id="inputPassword" placeholder="Password" ng-model="user.password")
          div(class="form-group")
            label(for="inputRole" class="col-lg-2 control-label") Company
            div(class="col-lg-10")
              input(type="checkbox" class="form-control" id="inputRole"  ng-model="user.isCompany")
          div(class="form-group")
            div(class="col-lg-10 col-lg-offset-2")
              button(type="submit" class="btn btn-primary" ng-click="signup(user)") Register
              button(type="reset" class="btn btn-default") Reset
        </fieldset>
      </form>