div.container
  div(class="col-md-3")
    div(class="row")
      p Location checkboxes
    div(class="row")
      p Position level checkboxes
    div(class="row")
      p Job availability
  div(class="col-md-9")
    div(class="row")
      div(class="form-group")
        div(class="col-md-8 col-md-offset-2")
          div(class="col-md-5")
            input(type="search" ng-model="searchText" class="form-control" placeholder="search text")
          div(class="col-md-5")
            input(type="search" ng-model="locationName" class="form-control" placeholder="location")
          div(class="col-md-2")
            button(class="btn btn-primary" ng-click="search(searchText, locationName)") Search
    div(class="row" ng-repeat="job in jobs")
      div(class="jobPosition")
          div(class="col-md-2")
            p picture
          div(class="col-md-8")
            div(class="row")
              h3 {{job.title}}
              h5 {{job.description}}
          div(class="col-md-2")
            p location
            p when 